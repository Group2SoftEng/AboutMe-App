<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    android:background="#5F634F">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About Us"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="75dp"
        android:textColor="#CFEBDF"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Ryan Alcorn"
        android:id="@+id/memberOneButton"
        android:background="#7D9FA5"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="12dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Daniel Harless"
        android:id="@+id/memberTwoButton"
        android:background="#9BC5CC"
        android:layout_below="@+id/memberOneButton"
        android:layout_alignLeft="@+id/textView2"
        android:layout_marginTop="12dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Kara Sutphin"
        android:id="@+id/memberThreeButton"
        android:background="#AEDDE5"
        android:layout_below="@+id/memberTwoButton"
        android:layout_alignLeft="@+id/textView2"
        android:layout_marginTop="12dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/memberFourButton"
        android:background="#C9E5D9"
        android:layout_below="@+id/memberThreeButton"
        android:layout_alignLeft="@+id/textView2"
        android:layout_marginTop="12dp"
        android:text="Jackson Foley" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Hayden Szymanski"
        android:id="@+id/memberFiveButton"
        android:background="#F9FFFC"
        android:layout_below="@+id/memberFourButton"
        android:layout_alignLeft="@+id/textView2"
        android:layout_marginTop="12dp" />
</RelativeLayout>
